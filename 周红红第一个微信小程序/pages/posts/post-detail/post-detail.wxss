.container{
  display: flex;
  flex-direction: column;
}

.bannerImg{
  width: 100%;
  height: 500rpx;
  margin-bottom: 30rpx;
}
.authour{
  display: flex;
  flex-direction: row;
   line-height: 50rpx; 
   margin-left: 20rpx;
}
.smallImg{
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
  vertical-align: middle;
  
}
.msg{
  margin-left: 18rpx;
  font-size: 30rpx;
  color: #666;
  vertical-align: middle;
}
.title{
  margin: 15rpx;
  font-size: 65rpx;
  font-weight: bold;
}
.imgBox{
  display: flex;
  flex-direction: row;
  position: relative;
}
.icon{
  width: 40px;
  height: 40px;
  position: absolute;
  right: 10rpx;
  z-index: 10;
}
.icon:nth-of-type(1){
  right: 120rpx;
}
.line{
  width: 90%;
  height: 2px;
  background-color: #eee;
  position: absolute;
  top: 40rpx;
  left: 40rpx
}
.content{
   margin-top: 100rpx;
   padding: 15rpx;
   
}

.audio{
  position: absolute;
  width: 102rpx;
  height: 110rpx;
  left: 50%;
  top: 220rpx;
  margin-left: -51rpx;
  opacity: 0.6;
}