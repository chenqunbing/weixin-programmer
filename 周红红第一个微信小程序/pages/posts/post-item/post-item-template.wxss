.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 30px;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}
.post-author-data{
  padding: 15rpx;
  margin-left: 15rpx;
}
.post-author{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  vertical-align: middle
}
.post-date{
  vertical-align: middle;
  padding-left: 20rpx;
  font-weight: normal;
  font-size: 14px;
  color: gray;
}
.post-title{
  font-weight: bold;
  font-size: 45rpx;
  margin-bottom: 15rpx;
  margin-left: 20rpx;
}
.post-image{
  width: 100%;
  height: 350rpx;
}
.post-content{
  color: #666;
  font-size: 34rpx;
  padding: 20rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  line-height: 40rpx;
  margin-bottom: 15rpx;
  margin-left: 15rpx;
}
.post-like-image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  font-size: 34rpx;
}