page{
   background-color: #b3d4db;
   height: 100%; 
}

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 160px;
}
.user-name{
  font-size: 32rpx;
  font-family: MicroSoft Yahei;
  font-weight: bold;
  margin-top: 100rpx;
}
.moto-container{
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  text-align: center;
  line-height: 80rpx;
  border-radius: 5rpx;
  color: #405f80;
  margin-top: 200rpx;
}
.moto{
  font-size: 22rpx;
  font-family: MicroSoft Yahei;
  font-weight: bold;
}
